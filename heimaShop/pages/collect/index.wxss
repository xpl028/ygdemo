page {
  background-color: #f3f4f6;
}
.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_tips.active {
  color: var(--themeColor);
  border: 1rpx solid currentColor;
}
.collect_main .collect_title .collect_tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.collect_main .collect_content .goods_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 2rpx 0;
  background-color: #fff;
}
.collect_main .collect_content .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .collect_content .goods_img image {
  width: 70%;
}
.collect_main .collect_content .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}
.collect_main .collect_content .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
