page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.left_menu {
  flex: 2;
}
.menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.right_container {
  flex: 5;
}
.goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list {
  display: flex;
  flex-wrap: wrap;
}
.goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.goods_icon {
  width: 50%;
}
